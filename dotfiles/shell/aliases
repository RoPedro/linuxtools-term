# File system
alias ls='eza -lh --group-directories-first --icons=auto'
alias lsa='ls -a'
alias lt='eza --tree --level=2 --long --icons --git'
alias lta='lt -a'
alias ncdu='ncdu --color dark'

# Tools
alias nv='nvim'
alias lzg='lazygit'
alias bat='batcat'
alias catp='batcat -p'
alias uptupg='sudo apt update && sudo apt upgrade -y && sudo apt autoremove -y'

# Others
alias cl='clear'
